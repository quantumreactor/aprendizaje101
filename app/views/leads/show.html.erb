<h3>Hola <%= @me.name %>!</h3>

<div class="card-group">


    <div class="card text-white bg-primary mb-3">
      <div class="card-body  text-center">
        <div>Prospectos</div>
        <div><%= @desglose["prospecto"] %></div>
      </div>
    </div>


      <div class="card text-white bg-secondary mb-3">
        <div class="card-body text-center">
          <div>Interesados</div>
          <div><%= @desglose["interesado"] %></div>
        </div>
      </div>

      <div class="card text-white bg-info mb-3">
        <div class="card-body text-center">
          <div>Clientes</div>
          <div><%= @desglose["cliente"] %></div>
        </div>
      </div>

  </div>



<h4> Tablero de prospectos </h4>
<p>
  <%= link_to '➕', new_lead_path, title: 'Agregar prospecto'%>

</p>
<table>
  <thead>
  <tr>
    <th>Email</th>
    <th>Nombre</th>
    <th>Celular</th>
    <th>Estado</th>
    <th>Ingresante</th>
    <th>Fecha</th>
    <th>Reus</th>
    <th>Opciones</th>
  </tr>
  </thead>
  <tbody>
  <% @leads.each do |lead| %>
    <tr class="<%= cycle('even', 'odd') -%>">
      <td><%= lead.email %></td>
      <td><%= lead.name %></td>
      <td><%= lead.phone %></td>
      <td><%= lead.status %></td>
      <td><%= User.find(lead.user_id).name %></td>
      <td><%= lead.indate %></td>
      <td><%= link_to "#{lead.meetings.count} 💬", lead_meetings_path(lead), title: 'Numero de juntas/llamadas' %></td>
      <td>
        <%= link_to "📝", edit_lead_path(lead), title: 'Editar prospecto' %> |
        <%= link_to "🗑️", lead_path(lead), title: 'Eliminar prospecto', method: :delete, data: { confirm: "Esta seguro? Se eliminaran todas las conversaciones de este prospecto"} %> </td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= yield %>

</body>
</html>